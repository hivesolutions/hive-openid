<div id="main-wrapper">
    <form id="signin-form" method="post" action="login">
        <h1 class="dark-blue text-center">Sign In</h1>
        <label class="label light-blue">Username</label>
        <input class="input input-signin dark-blue" type="text" tabindex="1" name="username" />
        <label class="label light-blue">Password</label>
        <input class="input input-signin dark-blue" type="password" tabindex="2" name="password" />
        <div>
            <div class="checkbox checkbox-signin"></div>
            <h3 class="light-blue">Stay Signed In</h3>
        </div>
        <div class="submit button button-signin button-dark-green">
            <span class="button-dark-green-text">Sign In</span>
        </div>
    </form>
</div>
